<div class="p-5 mb-4 bg-light rounded-3">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold"><%= @friend.first_name %> <%= @friend.last_name%> <span class="fs-3 fw-normal"><%= @friend.twitter%></span></h1>
        <p class="col-md-8 fs-5"><span class="fw-bold">Email:</span> <%= @friend.email %> <br> <span class="fw-bold">Phone:</span> <%= @friend.phone%></p>
        <div class="d-flex pt-3">
          <%= link_to "Edit this friend", edit_friend_path(@friend), class: 'btn btn-success me-2' %> 
          <%= button_to "Destroy this friend", @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger me-2'%>
          <%= link_to "Back to friends", friends_path, class: 'btn btn-link me-2' %> 
          
        </div>
      </div>
</div>
